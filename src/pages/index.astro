---
import "../styles/global.css";
import HeroCard from "../components/HeroCard.astro";
import ManageAccountsCard from "../components/ManageAccountsCard.astro";
import ConsistentScheduleCard from "../components/ConsistentScheduleCard.astro";
import ScheduleCard from "../components/ScheduleCard.astro";
import GrowFollowersCard from "../components/GrowFollowersCard.astro";
import AudienceGrowthCard from "../components/AudienceGrowthCard.astro";
import CreatePostCard from "../components/CreatePostCard.astro";
import WriteWithAICard from "../components/WriteWithAICard.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="description"
			content="Frontend Mentor challenge: A responsive bento grid layout showcasing social media management features. Built with Astro and CSS Grid."
		/>
		<meta name="generator" content={Astro.generator} />

		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="./favicon-32x32.png"
		/>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;1,400;1,500&display=swap"
			rel="stylesheet"
		/>

		<title>Frontend Mentor | Bento grid</title>
	</head>
	<body>
		<main>
			<div class="bento-grid">
				<HeroCard />
				<ManageAccountsCard />
				<ConsistentScheduleCard />
				<ScheduleCard />
				<GrowFollowersCard />
				<AudienceGrowthCard />
				<CreatePostCard />
				<WriteWithAICard />
			</div>
		</main>
	</body>
</html>

<style>
	main {
		margin: auto;
		padding-block: 1.5rem;
		padding-inline: clamp(
			1rem,
			-4.9559rem + 19.8529vw,
			7.75rem
		); /* from 480px to 1024px */
	}

	.bento-grid {
		display: grid;
		gap: 1.5rem;
		max-width: 75rem;
		margin-inline: auto;
		grid-template-areas:
			"hero"
			"manage"
			"maintain"
			"schedule"
			"grow"
			"audience"
			"create"
			"write";
	}

	@media (min-width: 40rem) {
		.bento-grid {
			grid-template-columns: repeat(2, 1fr);
			grid-template-areas:
				"hero hero"
				"manage maintain"
				"write schedule"
				"create audience"
				"grow grow";
		}
	}

	@media (min-width: 64rem) {
		main {
			padding-inline: 2rem;
		}

		.bento-grid {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas:
				"create hero hero schedule"
				"create manage maintain schedule"
				"write manage maintain schedule"
				"write audience grow grow";
		}
	}
</style>
