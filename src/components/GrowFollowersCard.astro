---
import { Image } from "astro:assets";
import growFollowers from "../assets/images/illustration-grow-followers.webp";
---

<section>
  <Image src={growFollowers} alt="Follower growth analytics dashboard" />
  <h2>Grow followers with non-stop content.</h2>
</section>

<style>
  section {
    align-items: center;
    background-color: var(--purple-500);
    color: var(--white);
    padding-block: 1.5rem;
    padding-inline: 4rem;
    gap: 2.5rem;
    text-align: center;
    grid-area: grow;
  }

  h2 {
    font-size: var(--subheading-sm);
  }

  @media (min-width: 48rem) {
    section {
      flex-direction: row;
      text-align: start;
      padding: 1.5rem;
      gap: 1rem;
    }

    img {
      width: 45%;
    }
  }
</style>
