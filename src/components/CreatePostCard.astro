---
import { Image } from "astro:assets";
import createPost from "../assets/images/illustration-create-post.webp";
---

<section>
  <h2>
    Create and schedule content
    <span>quicker.</span>
  </h2>
  <Image src={createPost} alt="Create post button with cursor icon" />
</section>

<style>
  section {
    background-color: var(--yellow-100);
    color: var(--black);
    padding: 2rem;
    gap: 1.5rem;
    overflow: hidden;
    grid-area: create;
  }

  h2 {
    font-size: var(--subheading-md);
  }

  span {
    font-style: italic;
    color: var(--purple-500);
  }

  img {
    width: 65%;
  }

  @media (min-width: 64rem) {
    img {
      width: 100%;
    }
  }
</style>
